
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Chatbuilder</title>
    <script src="http://chatbuilder.hackreactor.com/ChatBuilder.js"></script>
  </head>
  <body>

    <script>

    delete Chat.display;
    delete Chat.fetch;
    delete Chat.send; 


       Chat.guide.start();

       $(document).ready(function(){



//Chat.send(($(".draft").val()));


setInterval(function(){
  var rChat = Math.floor((Math.random() * 9) + 1);
$.ajax({
  type: "GET",
  url: "https://api.parse.com/1/classes/chats",
  dataType: "json",
  success: function(data){
   
    $(".messages").append("<li>" + data.results[rChat].text + "</li>");
  }  
});
}, 3000);


$(".send").click(function(){

var message = ($(".draft").val());
var pathArray = window.location.href.split( '=' );
var secondLevelLocation = pathArray[2];

$.ajax({
  type: "POST",
  url: "https://api.parse.com/1/classes/chats",
  data: JSON.stringify({
    text: secondLevelLocation + ": " + ($(".draft").val())}),    
  contentType: "application/json",
  dataType: "json",
  success: function(data){

    $(".messages").append("<li>" + secondLevelLocation + ": " + message + "</li>");
   
  }
});
});

});

    </script>

    <h2>Borken Chat</h2>

    <input class="draft" type="text"/> <button class="send">Send</button>

    <ul class="messages">
    
      
    </ul>

  </body>
